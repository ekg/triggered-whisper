<?xml version="1.0" encoding="utf-8"?>
<!--
    Hotkey Bar - Essential tmux operations
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotkey_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#80000000"
    android:padding="4dp"
    android:visibility="gone">

    <ImageButton
        android:id="@+id/btn_hk_new_pane"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/ic_hk_new_pane"
        android:background="#FF505050"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="New Pane" />

    <ImageButton
        android:id="@+id/btn_hk_new_window"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/ic_hk_new_window"
        android:background="#FF505050"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="New Window" />

    <ImageButton
        android:id="@+id/btn_hk_prev_window"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1.5"
        android:src="@drawable/ic_hk_prev"
        android:background="#FF505050"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="Previous Window" />

    <ImageButton
        android:id="@+id/btn_hk_next_window"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1.5"
        android:src="@drawable/ic_hk_next"
        android:background="#FF505050"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="Next Window" />

    <ImageButton
        android:id="@+id/btn_hk_ctrl_c"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/ic_hk_cancel"
        android:background="#FF505050"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="Cancel (Ctrl+C)" />

    <ImageButton
        android:id="@+id/btn_hk_ctrl_d"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/ic_hk_exit"
        android:background="#FF505050"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:contentDescription="Exit (Ctrl+D)" />

</LinearLayout>
