<?xml version="1.0" encoding="utf-8"?>
<!--
    Hotkey Bar - On-screen buttons for all controller hotkey functions
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hotkey_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80000000"
    android:padding="4dp"
    android:visibility="gone">

    <!-- Row 1: Basic Actions -->
    <HorizontalScrollView
        android:id="@+id/row_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_hk_listen"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="🎤 Listen"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_fzf"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="^R fzf"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_enter"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="↵ Enter"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_delete"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="⌫ Del"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_space"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="␣ Space"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Row 2: Tmux Operations -->
    <HorizontalScrollView
        android:id="@+id/row_tmux"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/row_basic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_hk_new_pane"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="➕ Pane"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_new_window"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="🪟 Window"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_prev_window"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="◀ Prev"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_next_window"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="▶ Next"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_ctrl_q"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="⌨️ ^Q"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_ctrl_c"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="❌ ^C"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_ctrl_d"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="🚪 ^D"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Row 3: Navigation (requires accessibility service) -->
    <HorizontalScrollView
        android:id="@+id/row_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/row_tmux"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_hk_home"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="🏠 Home"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_back"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="⬅️ Back"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/btn_hk_recent"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="📱 Recent"
                android:textSize="10sp"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
