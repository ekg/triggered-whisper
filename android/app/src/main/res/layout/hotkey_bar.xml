<?xml version="1.0" encoding="utf-8"?>
<!--
    Hotkey Bar - Essential tmux operations
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotkey_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#80000000"
    android:padding="8dp"
    android:visibility="gone">

    <Button
        android:id="@+id/btn_hk_new_pane"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="➕"
        android:textSize="20sp"
        android:layout_marginEnd="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <Button
        android:id="@+id/btn_hk_new_window"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="🪟"
        android:textSize="20sp"
        android:layout_marginEnd="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <Button
        android:id="@+id/btn_hk_prev_window"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="◀"
        android:textSize="20sp"
        android:layout_marginEnd="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <Button
        android:id="@+id/btn_hk_next_window"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="▶"
        android:textSize="20sp"
        android:layout_marginEnd="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <Button
        android:id="@+id/btn_hk_ctrl_c"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="❌"
        android:textSize="20sp"
        android:layout_marginEnd="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <Button
        android:id="@+id/btn_hk_ctrl_d"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="🚪"
        android:textSize="20sp"
        android:minWidth="0dp"
        android:minHeight="0dp" />

</LinearLayout>
